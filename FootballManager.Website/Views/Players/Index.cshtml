@model IEnumerable<Models.PlayerDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by First Name: <input type="text" name="FirstName" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Show all</a>
        </p>
    </div>
</form>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by Age: <input type="text" name="Age" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Show all</a>
        </p>
    </div>
</form>
<form asp-action="Index" method="get">
<div class="form-actions no-color">
    <p>
        Search by Last Name: <input type="text" name="LastName" />
        <input type="submit" value="Search" class="btn btn-default" /> |
        <a asp-action="Index">Show all</a>
    </p>
</div>
</form>
<form asp-action="Index" method="get">
<div class="form-actions no-color">
    <p>
        Search by Command: <input type="text" name="FirstName" />
        <input type="submit" value="Search" class="btn btn-default" /> |
        <a asp-action="Index">Show all</a>
    </p>
</div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Age</th>
            <th>Last Name</th>
            <th>Command</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>
                <a asp-action="Create" asp-route-id="@item.ID">Create</a>  |
                <a asp-action="Update" asp-route-id="@item.ID">Update</a>  |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.Age)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Command)</td>
        </tr>
    }
    </tbody>
</table>